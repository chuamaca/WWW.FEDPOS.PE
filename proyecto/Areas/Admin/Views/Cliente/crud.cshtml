@model Cliente


@{
    ViewBag.Title = "crud";
}

<h3 class="page-header">
    @(Model.IdCliente > 0 ? Model.NombreCliente : "Nuevo registro")
</h3>

<ol class="breadcrumb">
    <li><a href="~/admin/Categoria">Categoria</a></li>
    <li class="active">@(Model.IdCliente > 0 ? Model.NombreCliente : "Nuevo registro")</li>
</ol>

@using (Html.BeginForm("guardarcliente", "Cliente", FormMethod.Post))
{
    @Html.HiddenFor(x => x.IdCliente)


    <div class="form-group">
        @Html.LabelFor(x => x.NombreCliente)
        @Html.TextBoxFor(x => x.NombreCliente, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.NombreCliente, null, new { @class = "label label-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.NroDocumento)
        @Html.TextBoxFor(x => x.NroDocumento, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.NroDocumento, null, new { @class = "label label-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Direccion)
        @Html.TextBoxFor(x => x.Direccion, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Direccion, null, new { @class = "label label-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Correo)
        @Html.TextBoxFor(x => x.Correo, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Correo, null, new { @class = "label label-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.Telefono)
        @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Telefono, null, new { @class = "label label-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Logocliente)
        @Html.TextBoxFor(x => x.Logocliente, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Logocliente, null, new { @class = "label label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Saldo)
        @Html.TextBoxFor(x => x.Saldo, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Saldo, null, new { @class = "label label-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Tipodoc)
        @Html.TextBoxFor(x => x.Tipodoc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Tipodoc, null, new { @class = "label label-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Estado)
        @Html.TextBoxFor(x => x.Estado, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Estado, null, new { @class = "label label-danger" })
    </div>

   

    <div class="text-right">
        <button type="submit" data-ajax="true" class="btn btn-primary">Guardar</button>
    </div>
}


